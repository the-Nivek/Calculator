        <item name="bgColor">@color/white</item>
        <item name="android:textColor">@color/dimGray</item>
        <item name="android:editTextColor">@color/dimGray</item>

        <item name="text_bgColor">@color/gainsboro</item>
        <item name="text_bgStrokeColor">@color/silver</item>
