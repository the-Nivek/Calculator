        <item name="dialogBackground">@drawable/o_white_dialog_bg</item>
        <item name="dialogTextColor">@color/gray</item>
        <item name="dialogTextColorSecondary">@color/gray</item>
        <item name="dialogTextColorAlertDialogListItem">@color/dimGray</item>
